{
  "name": "kiro-github-badges",
  "version": "1.0.0",
  "description": "GitHub Action to generate Shields.io compatible JSON badges for Kiro task completion",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "all": "npm run build && npm run package && npm test && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CLBray/kiro-github-badges.git"
  },
  "keywords": [
    "github-action",
    "kiro",
    "badges",
    "shields.io",
    "task-tracking"
  ],
  "author": "Kiro",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
